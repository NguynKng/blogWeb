<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN</title>
    <script src="https://kit.fontawesome.com/934bce4726.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../../css/admin.css">
    <script>
        function deleteBlog(id) {
            var c = confirm("Are you sure you want to delete this post ?");
            if (c == true) {
                fetch('/admin/blogs/' + id, {
                    method: "delete"
                    }).then(function(res){
                        return res.json();
                    }).then(function(data){
                        console.info(data);
                        var p = document.getElementById(id);
                        p.style.display = 'none';
                    }).catch(function(error){
                        console.error(error);
                });
            }
        }
    </script>
</head>
<body>
    <div class="header">
        <div class="brand">
            <h1>ADMIN</h1>
        </div>
        <div class="admin-info">
            <i class="fa-solid fa-user"></i>
            <div class="admin-item">
                <a class="admin-username" href="#"><%= admin.username %>
                    <i class="fa-solid fa-sort-down"></i>
                </a>
                <ul class="admin-dropdown">
                    <li><a class="profile-link" href="#">Profile</a></li>
                    <li><a class="logout-link" href="/admin/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!----------AdminMenu--------->
    <div class="admin-menu">
        <div class="menu-item">
            <a href="/admin/blogs">Manage Posts</a>
        </div>
        <div class="menu-item">
            <a href="/admin/topics">Manage Topics</a>
        </div>
        <div class="menu-item">
            <a href="/admin/users">Manage Users</a>
        </div>
    </div>
    <!---------EditMenu--------->
    <div class="edit-menu">
        <div class="edit-item">
            <a class="add-link" href="/admin/blogs/add">Add Post</a>
        </div>
        <div class="edit-item">
            <a class="manage-link" href="/admin/blogs">Manage Posts</a>
        </div>
    </div>
    <!------------Manage----------->
    <table class="table">
        <div style="text-align:center" class="text">
            <h1>Manage Posts</h1>
        </div>
        <thead>
            <tr>
                <td>Index</td>
                <td style="width: 300px">Image</td>
                <td style="width: 400px">Title</td>
                <td style="width: 200px">Author</td>
                <td>Topic</td>
                <td style="width: 200px">Action</td>
            </tr>
        </thead>
        <tbody>
            <% blogs.forEach((blog, i) => { %>
            <tr id="<%= blog._id %>">
                <td><%= i+1 %></td>
                <td>
                    <img src="/<%= blog.images[0].path %>" alt="" style="width: 100px; height: 100px; object-fit: cover">
                </td>
                <td><%= blog.title %></td>
                <td><%= blog.author %></td>
                <td><%= blog.topic %></td>
                <td>
                    <a style="color: green" href="/admin/blogs/edit?post_id=<%= blog._id %>">Edit</a> /
                    <a style="color: red" href="javascript:;" onclick="deleteBlog('<%= blog._id %>')">Delete</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>